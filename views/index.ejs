<% if (searched === true) { %>
<%- include("partials/cardpage-header.ejs") %>
<% } else { %>
<%- include("partials/homepage-header.ejs") %>
<% } %>


<main>
    <% if (searched === true){ %>
    <h2><%= cardName %></h2>
    <p><%= cardRarity %></p>
    <img src="<%= cardImage %>" alt="pokémon card illustration" height="410px">
    <p><%= cardReleaseDate %></p>
    <p><%= cardSellingPrice %></p>
    <% } else { %>
    <h2>Enter Pokémon or Card Name</h2>
    <form action="/search" id="form" class="form" method="POST">
        <input type="text" placeholder="Search" name="name" required>
        <button type="submit">Search</button>
    </form>
    <% } %>
</main>

<%- include("partials/footer.ejs") %>